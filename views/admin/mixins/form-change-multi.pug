mixin form-change-multi(path)
    form(action=path method="POST" form-change-multi)
        .d-flex.align-items-center.gap-1
            .form-group
                select(name="type" class="form-control")
                    option(disabled selected) --Chọn hành động--
                    option(value="active") Active 
                    option(value="inactive") Inactive 
                    option(value="delete-all") Xóa tất cả
                    option(value="change-position") Sắp xếp
            .form-group
                input(
                    type="text"
                    name="ids"
                    value=""
                    class="form-control d-none"    
                    )
            button(type="submit" class="btn btn-info btn-sm") Apply
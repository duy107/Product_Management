mixin pagination(pagination)
    nav
        ul(class="pagination")
            if (pagination.currentPage > 1)
                li(class="page-item")
                    button(class="page-link" button-pagination = pagination.currentPage - 1) Previous
            - var pageStart = 1, pageEnd = pagination.numberPage
            if(pagination.numberPage > 2)
                if(pagination.currentPage == 1)
                    - pageStart = 1
                    - pageEnd = pageStart + 2
                else if (pagination.currentPage == pagination.numberPage)
                    - pageEnd = pagination.numberPage
                    - pageStart = pageEnd - 2
                else 
                    - pageStart = pagination.currentPage - 1
                    - pageEnd = pagination.currentPage + 1
            - for(var i = pageStart ; i <= pageEnd; i++)
                    li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`)
                        button(class="page-link" button-pagination=i) #{i}
            if (pagination.currentPage < pagination.numberPage)
                li(class="page-item")
                    button(class="page-link" button-pagination = pagination.currentPage + 1) Next
extends ../../layout/default
block main
    .card.mb-3
        .card-header Action
        .card-body   
            .row
                .col-8
                .col-4
                    a(
                        href=`${prefixAdmin}/product-category/create`
                        class = "btn btn-outline-success btn-sm"
                    ) Thêm mới
    .card.mb-3
        .card-header Danh sách danh mục
        .card-body            
            table(class="table table-hover table-sm" checkbox-multi)
                thead
                    tr
                        th
                            input(type="checkbox" name="checkAll")
                        th STT
                        th Hình ảnh
                        th Tiêu đề
                        th Vị trí
                        th Trạng thái
                        th Hành động
                tbody
                    each item, index in records
                        tr
                            td
                                input(type="checkbox", name="id" value=item.id)
                            td #{index + 1}
                            td
                                img(src=item.image alt=item.title width="30px" height="100%")
                            td #{item.title}
                            td
                                input(
                                    type="number"
                                    value=item.position
                                    name="position"
                                    style="width: 60px"
                                    min="1"
                                )
                            td
                                //- a(href="#" class=(item.status == "active" ? "badge text-bg-success text-decoration-none" : "badge text-bg-danger text-decoration-none"))
                                //-     | #{item.status == "active" ? "Hoạt động" : "Dừng hoạt động"}
                                if(item.status == "active")
                                    a(
                                        href="javascript:;"
                                        class=("badge text-bg-success text-decoration-none")
                                        data-id=item.id
                                        data-status=item.status
                                        button-change-status
                                    ) Active
                                else
                                    a(
                                        href="javascript:;"
                                        class=("badge text-bg-danger text-decoration-none")
                                        data-id=item.id
                                        data-status=item.status
                                        button-change-status
                                    ) Inactive
                            td
                                a(
                                    class="btn btn-warning btn-sm"
                                    href = `${prefixAdmin}/category/update/${item.id}`
                                ) Sửa
                                button(
                                    class="btn btn-danger btn-sm ms-1"
                                    button-delete-item
                                    data-id=item.id
                                ) Xóa
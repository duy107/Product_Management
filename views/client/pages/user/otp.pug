extends ../../layout/default.pug
include ../../mixins/alert.pug
    block main
        +alert(5000)
        .container.my-5
            .row.justify-content-center
                .col-8
                    h1.text-center Xác thực OTP
                    form(
                        method="POST"
                        action=`/user/password/otp`
                    ) 
                        div(class="form-group") Email
                            label(for="email") 
                            input(id="email" name="email" type="email" class="form-control" value=email readonly) 
                        div(class="form-group")
                            label(for="otp") Nhập mã OTP
                            input(id="otp" name="otp" type="text" class="form-control") 
                        div(class="form-group")
                            button(class="btn btn-primary btn-block" type="submit") Đổi mật khẩu
        script(src="/admin/js/product.admin.js") 